{
  "name": "arduino-classroom-deploy",
  "displayName": "Arduino Classroom Deploy",
  "version": "0.1.0",
  "description": "Extension Theia pour orchestrer le déploiement simultané de sketches Arduino en environnement pédagogique.",
  "publisher": "nafnafnaf59",
  "theiaExtensions": [
    "./lib/extension"
  ],
  "main": "lib/extension.js",
  "scripts": {
    "clean": "rimraf lib",
    "build": "npm run lint && tsc -p tsconfig.json",
    "watch": "tsc -w -p tsconfig.json",
    "lint": "eslint --max-warnings=0 \"src/**/*.{ts,tsx}\"",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "package": "theia build"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "dependencies": {
    "@theia/core": "1.43.0",
    "@theia/plugin": "1.43.0",
    "ajv": "8.13.0",
    "ajv-formats": "3.0.1",
    "axios": "1.7.7",
    "pino": "9.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rxjs": "7.8.1",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@types/node": "20.11.30",
  "@types/uuid": "9.0.7",
    "@types/react": "18.2.46",
    "@types/react-dom": "18.2.18",
    "@typescript-eslint/eslint-plugin": "7.2.0",
    "@typescript-eslint/parser": "7.2.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-react": "7.34.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "prettier": "3.2.5",
    "rimraf": "5.0.5",
    "theia": "1.43.0",
    "tslib": "2.6.2",
    "typescript": "5.4.5",
    "vitest": "1.3.1"
  }
}
